<%- include("../../views/partials/admin/header") %>

    <style>
        /* General Page Styling */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f9f9fb;
            color: #333;
        }

        /* Content Styling */
        .content-container {
            margin-left: 280px;
            padding: 20px;
            width: calc(100% - 280px);
        }

        /* Card Styling */
        .order-card {
            background: white;
            color: #333;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }

        .card-title {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 15px;
        }

        /* Order Info Section */
        .order-info {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .order-meta {
            color: #666;
            font-size: 14px;
        }

        /* Price Breakdown */
        .price-breakdown {
            margin-top: 15px;
        }

        .price-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 5px;
        }

        .total-amount {
            font-size: 18px;
            font-weight: 600;
            margin-top: 10px;
        }

        /* Status Badges */
        .status-badge {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 500;
        }

        .status-placed {
            background: #e0f9eb;
            color: #219653;
            border: 1px solid #219653;
        }

        .status-processing {
            background: #e6f6fd;
            color: #2d9cdb;
            border: 1px solid #2d9cdb;
        }

        .status-shipped {
            background: #f0e6fd;
            color: #9b51e0;
            border: 1px solid #9b51e0;
        }

        .status-delivered {
            background: #e0f9eb;
            color: #219653;
            border: 1px solid #219653;
        }

        .status-cancelled {
            background: #fde6e6;
            color: #eb5757;
            border: 1px solid #eb5757;
        }

        .status-returned {
            background: #fdf6e6;
            color: #f2994a;
            border: 1px solid #f2994a;
        }

        /* Items Section */
        .items-card {
            background: white;
            color: #333;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }

        .item-row {
            display: flex;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid #ddd;
        }

        .item-row:last-child {
            border-bottom: none;
        }

        .item-image {
            width: 120px;
            height: 120px;
            background: #f5f5f5;
            border-radius: 8px;
            overflow: hidden;
            margin-right: 20px;
        }

        .item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .item-details {
            flex-grow: 1;
        }

        .item-name {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .item-meta {
            color: #666;
            font-size: 14px;
            margin-bottom: 5px;
        }

        .item-price {
            font-weight: 600;
            margin-left: 20px;
            font-size: 18px;
        }

        .item-actions {
            margin-left: 20px;
        }

        /* Action Buttons */
        .action-btn {
            background-color: #6c43c1;
            color: white;
            border: none;
            margin-left: 15px;
            text-decoration: none;
            width: 120px;
            border-radius: 5px;
            padding: 6px 12px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .action-btn:hover {
            background-color: #563d7c;
        }

        .return-btn {
            background-color: #f2994a;
        }

        /* Order Status Form */
        .order-status-form {
            display: flex;
            align-items: center;
            margin-top: 20px;
            background: #f5f5f5;
            padding: 15px;
            border-radius: 8px;
        }

        .order-status-form select {
            width: auto;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ddd;
            background: #fff;
            color: #333;
            margin-right: 10px;
        }

        .address-label {
            font-weight: 600;
            display: block;
            margin-bottom: 8px;
        }

        /* Return request dropdown sizing */
        .return-select {
            width: auto !important;
            display: inline-block;
        }

        .back-btn {
            padding: 5px 10px;
            font-size: 13px;
        }
    </style>

    <div class="content-container">
        <div class="content-header row d-flex justify-content-between align-items-center mb-4">
            <h2 class="content-title">ðŸ“¦ Order Details</h2>
            <a href="/admin/orders" class="action-btn back-btn">Back to Orders</a>
        </div>

        <!-- Order Summary Card -->
        <div class="order-card">
            <h3 class="card-title">Order ID: #<%= order.orderId %>
            </h3>
            <div class="order-info">
                <div class="order-meta">
                    Order Date: <%= new Date(order.createdAt).toLocaleDateString('en-US', { month: 'long' ,
                        day: 'numeric' , year: 'numeric' }) %>
                </div>
                <div class="order-meta">
                    Payment Mode: <%= order.paymentMethod %>
                </div>
                <div class="order-meta">
                    Payment Status: <%= order.paymentStatus %>
                </div>
                <div class="order-meta">
                    Current Status:
                    <% const allCancelled=order.orderedItems.every(item=> item.cancelled);
                        const allReturned = order.orderedItems.every(item => item.returnStatus === 'Approved');
                        %>

                        <% if (order.orderedItems.length===1 && (order.orderedItems[0].cancelled ||
                            order.orderedItems[0].returnStatus==='Approved' )) { %>
                            <% if (order.orderedItems[0].cancelled) { %>
                                <span class="status-badge status-cancelled">Cancelled</span>
                                <% } else { %>
                                    <span class="status-badge status-returned">Returned</span>
                                    <% } %>
                                        <% } else if (allCancelled) { %>
                                            <span class="status-badge status-cancelled">Cancelled</span>
                                            <% } else if (allReturned) { %>
                                                <span class="status-badge status-returned">Returned</span>
                                                <% } else { %>
                                                    <span
                                                        class="status-badge status-<%= order.orderStatus.toLowerCase() %>">
                                                        <%= order.orderStatus %>
                                                    </span>
                                                    <% } %>
                </div>

                <div class="order-meta">
                    Expected Delivery: <%= new Date(order.expectedDeliveryDate).toLocaleDateString('en-US', {
                        month: 'long' , day: 'numeric' , year: 'numeric' }) %>
                </div>
                <%if(order.deliveredAt && order.orderStatus==="Delivered" ){%>
                    <div class="order-meta">
                        Delivered At: <%= new Date(order.deliveredAt).toLocaleDateString('en-US', { month: 'long' ,
                            day: 'numeric' , year: 'numeric' }) %>
                    </div>
                    <%}%>
            </div>

            <div class="price-breakdown">
                <h4 class="card-title">Price Breakdown</h4>
                <div class="price-row">
                    <span>Subtotal:</span>
                    <span>â‚¹<%= order.totalPrice %></span>
                </div>
                <% if(order.discount> 0) { %>
                    <div class="price-row">
                        <span>Discount:</span>
                        <span>-â‚¹<%= (order.totalPrice - order.finalAmount).toFixed(2) %></span>
                    </div>
                    <% } %>
                        <% if(order.couponApplied) { %>
                            <div class="price-row">
                                <span>Coupon Redemption:</span>
                                <span>-â‚¹<%= (order.totalPrice * order.discount / 100).toFixed(2) %></span>
                            </div>
                            <% } %>
                                <div class="price-row total-amount">
                                    <span>Total Amount:</span>
                                    <span>â‚¹<%= order.finalAmount %></span>
                                </div>
            </div>


            <!-- Update Order Status Form -->
            <% if (!(order.orderedItems.length===1 && (order.orderedItems[0].cancelled ||
                order.orderedItems[0].returnStatus==='Approved' )) && !(allCancelled || allReturned)) { %>
                <form id="order-status-form" class="order-status-form">
                    <input type="hidden" name="orderId" value="<%= order.orderId %>">
                    <select name="orderStatus" class="form-control" style="width: auto;">
                        <option value="Placed" <%=order.orderStatus==='Placed' ? 'selected' : '' %>>Placed</option>
                        <option value="Processing" <%=order.orderStatus==='Processing' ? 'selected' : '' %>>Processing
                        </option>
                        <option value="Shipped" <%=order.orderStatus==='Shipped' ? 'selected' : '' %>>Shipped</option>
                        <option value="Delivered" <%=order.orderStatus==='Delivered' ? 'selected' : '' %>>Delivered
                        </option>
                    </select>
                    <button type="submit" id="statusBtn" class="action-btn">Update Status</button>
                </form>
                <% } %>


        </div>

        <!-- Shipping Address Card -->
        <div class="order-card">
            <h3 class="card-title">Shipping Address</h3>
            <div class="address-details">
                <p><strong>
                        <%= order.deliveryAddress.name %>
                    </strong></p>
                <p>Phone:<%= order.deliveryAddress.phone || '' %>
                </p>
                <%if(order.deliveryAddress.altPhone) {%>
                    <p>Alternate Phone:<%= order.deliveryAddress.altPhone || '' %>
                    </p>
                    <%}%>
                        <p>
                            <%= order.deliveryAddress.landMark || '' %>,
                        </p>
                        <p>
                            <%= order.deliveryAddress.city || '' %>,
                                <%= order.deliveryAddress.state || '' %>
                        </p>
                        <p>
                            <%= order.deliveryAddress.pincode || '' %>, <%= order.deliveryAddress.country || 'India' %>
                        </p>
            </div>
        </div>

        <!-- Items Card -->
        <div class="items-card">
            <h3 class="card-title">Items</h3>

            <% order.orderedItems.forEach((item, index)=> { %>
                <div class="item-row">
                    <div class="item-image">
                        <img src="/uploads/re-image/<%= item.product.productImage[0] %>"
                            alt="<%= item.product.productName %>">
                    </div>
                    <div class="item-details">
                        <div class="item-name">
                            <%= item.product.productName %>
                        </div>
                        <div class="item-meta">
                            <% if(item.product.variants && item.product.variants.length> 0) { %>
                                Color: <%= item.product.variants[0].color || 'N/A' %>
                                    <% } else { %>
                                        Brand: <%= item.product.brand %>
                                            <% } %>
                        </div>
                        <div class="item-meta">Qty: <%= item.quantity %>
                        </div>

                        
                        <!-- Item Status and Actions -->
                        <div class="item-meta mt-2">
                            <% if(item.cancelled) { %>
                                <span class="status-badge status-cancelled">Cancelled</span>
                                <div class="mt-1">Reason: <%= item.cancelReason %>
                                </div>
                                <% } else if(item.returnStatus !=='None' ) { %>
                                    <span class="status-badge status-cancelled">Return <%=
                                            item.returnStatus %></span>
                                            <% if(item.returnReason) { %>
                                                <div class="mt-1" style="color: #e67e22;">
                                                  Reason: <%= item.returnReason %>
                                                </div>
                                              <% } %>
                                              

                                            <!-- Add this block to show return approval form when status is Pending -->
                                            <% if(item.returnStatus==='Pending' ) { %>
                                                <form action="/admin/process-return-request" method="POST"
                                                    class="d-inline-block ml-2 mt-2">
                                                    <input type="hidden" name="orderId" value="<%= order._id %>">
                                                    <input type="hidden" name="itemIndex" value="<%= index %>">
                                                    <select name="returnStatus"
                                                        class="form-control form-control-sm d-inline-block return-select">
                                                        <option value="">Return Actions</option>
                                                        <option value="Approved">Approve Return</option>
                                                        <option value="Rejected">Reject Return</option>
                                                    </select>
                                                    <button type="submit" class="btn btn-sm action-btn">Submit</button>
                                                </form>
                                                <% } %>
                                                    <% } else { %>
                                                        <span
                                                            class="status-badge status-<%= order.orderStatus.toLowerCase() %>">
                                                            <%= order.orderStatus %>
                                                        </span>
                                                        <% } %>
                        </div>
                    </div>
                    <div class="item-price">â‚¹<%= item.price*item.quantity %>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const form = document.getElementById("order-status-form");

            form.addEventListener("submit", async (e) => {
                e.preventDefault();

                const orderId = form.orderId.value;
                const orderStatus = form.orderStatus.value;

                try {
                    const response = await fetch("/admin/update-order-status", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({ orderId, orderStatus })
                    });

                    const data = await response.json();

                    if (response.ok) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Status Updated!',
                            text: data.message || 'Order status has been updated successfully.',
                            timer: 2000,
                            showConfirmButton: false
                        }).then(() => {
                            location.reload(); // Optional: reload page to reflect changes
                        });
                    } else {
                        throw new Error(data.message || 'Something went wrong');
                    }
                } catch (err) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Update Failed',
                        text: err.message
                    });
                }
            });
        });
    </script>


    <%- include("../../views/partials/admin/footer") %>