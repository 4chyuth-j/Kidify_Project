<%- include("../../views/partials/admin/header") %>

<style>
    /* General Page Styling */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f9f9fb;
        color: #333;
    }

    /* Content Styling */
    .content-container {
        margin-left: 280px;
        padding: 20px;
        width: calc(100% - 280px);
    }

    /* Content Title Styling */
    .content-title {
        font-size: 24px;
        font-weight: 700;
        color: #563d7c;
        text-align: left;
        margin-bottom: 15px;
    }

    /* Filter Section */
    .filter-container {
        background-color: white;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
    }

    .filter-dropdown {
        width: 180px;
        padding: 8px 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
    }

    .date-filter {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .date-input {
        padding: 8px 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
    }

    .apply-filter-btn {
        background-color: #6c43c1;
        color: white;
        padding: 8px 20px;
        border-radius: 5px;
        border: none;
        font-weight: 500;
        cursor: pointer;
    }

    .download-container {
        display: flex;
        gap: 10px;
    }

    .download-btn {
        padding: 8px 15px;
        border-radius: 5px;
        color: white;
        font-weight: 500;
        text-decoration: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .pdf-btn {
        background-color: #f44336;
    }

    .excel-btn {
        background-color: #2e7d32;
    }

    /* Stats Cards */
    .stats-container {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .stat-card {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        flex: 1;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        color: white;
    }

    .orders-icon {
        background-color: #ffb74d;
    }

    .amount-icon {
        background-color: #42a5f5;
    }

    .discount-icon {
        background-color: #4caf50;
    }

    .sales-icon {
        background-color: #29b6f6;
    }

    .stat-info h3 {
        margin: 0;
        font-size: 14px;
        color: #666;
    }

    .stat-info p {
        margin: 5px 0 0;
        font-size: 24px;
        font-weight: bold;
        color: #333;
    }

    /* Table Styling */
    .table-container {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table thead {
        background: #563d7c;
        color: white;
    }

    .table th,
    .table td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .table tbody tr:hover {
        background-color: #f9f9fb;
    }

    /* Pagination Styling */
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .pagination {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .pagination li {
        margin: 0 5px;
    }

    .pagination a {
        display: block;
        padding: 8px 12px;
        background: #6c43c1;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: 0.3s;
    }

    .pagination a:hover {
        background: #563d7c;
    }

    .pagination .active a {
        background: #563d7c;
        font-weight: bold;
        pointer-events: none;
    }

    .product-link {
        color: #3498db;
        text-decoration: none;
        font-weight: 500;
    }

    .product-link:hover {
        text-decoration: underline;
    }
</style>

<div class="content-container">
    <div class="content-header row d-flex justify-content-between align-items-center">
        <h2 class="content-title">
            <i class="bi bi-graph-up"></i> Sales Report
        </h2>
    </div>

    <!-- Filter Section -->
    <div class="filter-container">
        <div style="display: flex; gap: 15px;">
            <select class="filter-dropdown" id="paymentFilter" name="payment">
                <option value="">Payment Method</option>
                <option value="COD" <%= filter && filter.payment === 'COD' ? 'selected' : '' %>>COD</option>
                <option value="ONLINE" <%= filter && filter.payment === 'ONLINE' ? 'selected' : '' %>>Online</option>
                <option value="WALLET" <%= filter && filter.payment === 'WALLET' ? 'selected' : '' %>>Wallet</option>
            </select>
            
            <select class="filter-dropdown" id="dateFilter" name="dateFilter">
                <option value="">Date Filter</option>
                <option value="daily" <%= filter && filter.dateFilter === 'daily' ? 'selected' : '' %>>Daily</option>
                <option value="weekly" <%= filter && filter.dateFilter === 'weekly' ? 'selected' : '' %>>Weekly</option>
                <option value="yearly" <%= filter && filter.dateFilter === 'yearly' ? 'selected' : '' %>>Yearly</option>
                <option value="custom" <%= filter && filter.dateFilter === 'custom' ? 'selected' : '' %>>Custom Date</option>
            </select>
            
            <div class="date-filter" id="customDateContainer" style="<%= filter && filter.dateFilter === 'custom' ? '' : 'display: none;' %>">
                <input type="date" class="date-input" id="startDate" name="startDate" value="<%= filter ? filter.startDate : '' %>">
                <span>to</span>
                <input type="date" class="date-input" id="endDate" name="endDate" value="<%= filter ? filter.endDate : '' %>">
            </div>
            
            <button class="apply-filter-btn" id="applyFilter">
                <i class="bi bi-funnel"></i> Filter
            </button>
        </div>
        
        <div class="download-container">
            <a href="#" class="download-btn pdf-btn" id="downloadPdf">
                <i class="bi bi-file-earmark-pdf"></i> PDF
            </a>
            <a href="#" class="download-btn excel-btn" id="downloadExcel">
                <i class="bi bi-file-earmark-excel"></i> Excel
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats-container">
        <div class="stat-card">
            <div class="stat-icon orders-icon">
                <i class="bi bi-cart"></i>
            </div>
            <div class="stat-info">
                <h3>Total Orders</h3>
                <p><%= stats.totalOrders %></p>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon amount-icon">
                <i class="bi bi-currency-rupee"></i>
            </div>
            <div class="stat-info">
                <h3>Total Amount</h3>
                <p>₹ <%= stats.totalAmount.toFixed(0) %></p>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon discount-icon">
                <i class="bi bi-tag"></i>
            </div>
            <div class="stat-info">
                <h3>Total Discounts</h3>
                <p>₹ <%= stats.totalDiscounts.toFixed(0) %></p>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon sales-icon">
                <i class="bi bi-cash-coin"></i>
            </div>
            <div class="stat-info">
                <h3>Net Sales</h3>
                <p>₹ <%= stats.netSales.toFixed(0) %></p>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Order Date</th>
                    <th>Items</th>
                    <th>Total (₹)</th>
                    <th>Discount (₹)</th>
                    <th>Payment</th>
                </tr>
            </thead>
            <tbody>
                <% if (orders && orders.length > 0) { %>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td> <a href="/admin/order-details?id=<%=order._id%>" style="text-decoration: none;">#<%= order.orderId %></a> </td>
                            <td><%= order.deliveryAddress.name %></td>
                            <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                            <td>
                                <% let itemCount = 0;
                                for(let item of order.orderedItems){
                                    itemCount+=item.quantity;
                                }
                                 %>
                                 <%=itemCount%>
                                  
                               
                            </td>
                            <td>₹<%= order.totalPrice %></td>
                            <td>₹<%= order.totalPrice - order.finalAmount %></td>
                            <td><%= order.paymentMethod %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="7" style="text-align: center;">No orders found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <% if (totalPages > 1) { %>
        <div class="pagination-container">
            <ul class="pagination">
                <% for(let i=1; i <= totalPages; i++) { %>
                    <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %><%= filterQuery %>">
                            <%= i %>
                        </a>
                    </li>
                <% } %>
            </ul>
        </div>
    <% } %>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Toggle custom date fields visibility
        document.getElementById('dateFilter').addEventListener('change', function() {
            const dateFilterValue = this.value;
            const customDateContainer = document.getElementById('customDateContainer');
            
            if (dateFilterValue === 'custom') {
                customDateContainer.style.display = 'flex';
            } else {
                customDateContainer.style.display = 'none';
            }
        });
        
        // Filter form submission
        document.getElementById('applyFilter').addEventListener('click', function() {
            const payment = document.getElementById('paymentFilter').value;
            const dateFilter = document.getElementById('dateFilter').value;
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            
            let filterUrl = '/admin/salesReport?';
            
            if (payment) filterUrl += `payment=${payment}&`;
            if (dateFilter) filterUrl += `dateFilter=${dateFilter}&`;
            
            if (dateFilter === 'custom') {
                if (startDate) filterUrl += `startDate=${startDate}&`;
                if (endDate) filterUrl += `endDate=${endDate}&`;
            }
            
            // Remove trailing & if present
            filterUrl = filterUrl.endsWith('&') ? filterUrl.slice(0, -1) : filterUrl;
            
            window.location.href = filterUrl;
        });
        
        // PDF Download button
        document.getElementById('downloadPdf').addEventListener('click', function(e) {
            e.preventDefault();
            
            // Get current filter parameters
            const payment = document.getElementById('paymentFilter').value;
            const dateFilter = document.getElementById('dateFilter').value;
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            
            let downloadUrl = '/admin/downloadSalesReport?format=pdf';
            
            if (payment) downloadUrl += `&payment=${payment}`;
            if (dateFilter) downloadUrl += `&dateFilter=${dateFilter}`;
            
            if (dateFilter === 'custom') {
                if (startDate) downloadUrl += `&startDate=${startDate}`;
                if (endDate) downloadUrl += `&endDate=${endDate}`;
            }
            
            // Initiate download
            window.location.href = downloadUrl;
        });
        
        // Excel Download button
        document.getElementById('downloadExcel').addEventListener('click', function(e) {
            e.preventDefault();
            
            // Get current filter parameters
            const payment = document.getElementById('paymentFilter').value;
            const dateFilter = document.getElementById('dateFilter').value;
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            
            let downloadUrl = '/admin/downloadSalesReport?format=excel';
            
            if (payment) downloadUrl += `&payment=${payment}`;
            if (dateFilter) downloadUrl += `&dateFilter=${dateFilter}`;
            
            if (dateFilter === 'custom') {
                if (startDate) downloadUrl += `&startDate=${startDate}`;
                if (endDate) downloadUrl += `&endDate=${endDate}`;
            }
            
            // Initiate download
            window.location.href = downloadUrl;
        });
    });
</script>

<%- include("../../views/partials/admin/footer") %>