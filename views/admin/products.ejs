<%- include("../../views/partials/admin/header") %>

    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
        <style>
            /* Ensure the main content does not overlap with the sidebar */
            .content-wrapper {
                margin-left: 250px;
                /* Adjust this based on your sidebar width */
                padding: 20px;
            }

            /* Overall Page Styling */
            body {
                background-color: #f8f9fc;
                /* Light gray background */
                font-family: "Poppins", sans-serif;
            }

            /* Center the search bar */
            .search-container {
                display: flex;
                justify-content: center;
                margin-bottom: 20px;
            }

            .search-container .input-group {
                width: 400px;
                border-radius: 25px;
                overflow: hidden;
                border: 1px solid #ddd;
                background: white;
            }

            .search-container input {
                border: none;
                padding: 12px;
                outline: none;
                flex: 1;
            }

            .search-container button {
                background: #6c48f5;
                /* Retaining Purple color */
                color: white;
                border: none;
                padding: 10px 15px;
                cursor: pointer;
                border-radius: 0 25px 25px 0;
            }

            /* Proper table layout */
            .table-container {
                display: flex;
                justify-content: center;
                margin-top: 10px;
            }

            .table {
                width: 90%;
                border-collapse: collapse;
                background: white;
                text-align: center;
                border-radius: 10px;
                box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
                /* Soft shadow */
                padding: 20px;
            }

            .table th {
                background-color: #f8f9fc;
                color: black;
                padding: 12px;
                text-align: center;
            }

            .table td {
                padding: 15px;
                border-bottom: 1px solid #ddd;
                background: #f4f4f9;
                /* Light gray row background */
                text-align: center;
                vertical-align: middle;
            }

            /* Fixing the button layout */
            .btn-container {
                display: flex;
                flex-direction: row;
                justify-content: center;
                gap: 5px;
            }

            .btn {
                padding: 8px 12px;
                font-size: 14px;
                border-radius: 8px;
                text-decoration: none;
            }

            .btn-info {
                background: #6c48f5;
                color: white;
                border: none;
            }

            .btn-danger {
                background: #dc3545;
                color: white;
                border: none;
            }

            .btn-success {
                background: #28a745;
                color: white;
                border: none;
            }

            /* Fixing pagination */
            .pagination-container {
                display: flex;
                justify-content: center;
                margin-top: 20px;
            }

            .pagination .page-item .page-link {
                color: white;
                background: #6c48f5;
                /* Retaining the same color */
                border-radius: 50px;
                margin: 0 5px;
                padding: 8px 12px;
                border: none;
            }

            .pagination .page-item.active .page-link {
                background-color: #4929c5;
                color: white;
            }
        </style>
    </head>

    <div class="content-wrapper">
        <div class="content-header text-center">
            <h2 class="content-title card-title">Products</h2>
        </div>

        <!-- Search Bar -->
        <div class="search-container">
            <form action="/admin/products/" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search products or brands..." name="search">
                    <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
                </div>
            </form>
        </div>

        <!-- Table -->
        <div class="table-container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Brand</th>
                        <th>Category</th>
                        <th>Base Price</th>
                        <th>Offer(%)</th>
                        <th>Offer</th>
                        <th>Quantity</th>
                        <th>Action</th>
                        <th>Edit</th>
                    </tr>
                </thead>

                <tbody>
                    <% for(let i=0; i<data.length ; i++) { %>
                        <tr>
                            <td>
                                <%= data[i].productName %>
                            </td>
                            <td>
                                <%= data[i].brand %>
                            </td>
                            <td>
                                <%= data[i].category.name %>
                            </td>
                            <td>
                                &#8377;<%= data[i].basePrice %>
                            </td>
                            <td>
                                <%if(locals.data[i].discountPercentage){%>
                                    <%= data[i].discountPercentage %>%

                                        <%}else{%>
                                            0%

                                            <%}%>
                            </td>
                            <td>
                                <div class="btn-container">
                                    <% if(locals.data[i].discountPercentage===0) {%>
                                        <button class="btn btn-info" onclick="addOffer('<%=data[i]._id%>')">
                                            <a href="#" class="text-white" style="text-decoration: none;">Add Offer</a>
                                        </button>
                                        <%}else{%>
                                            <button class="btn btn-info" onclick="removeOffer('<%=data[i]._id%>')">
                                                <a href="#" class="text-white" style="text-decoration: none;">Remove</a>
                                            </button>
                                            <%}%>
                                </div>
                            </td>
                            <td>
                                <%=data[i].stock%>
                            </td>
                            <td>
                                <div class="btn-container">
                                    <button class="btn btn-danger">
                                        <a href="#" class="text-white" style="text-decoration: none;">Block</a>
                                    </button>
                                    <button class="btn btn-success">
                                        <a href="#" class="text-white" style="text-decoration: none;">Unblock</a>
                                    </button>
                                </div>
                            </td>
                            <td>
                                <button class="btn btn-info">
                                    <a href="#" class="text-white" style="text-decoration: none;">Edit</a>
                                </button>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination-container">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <% for (let i=1; i <=totalPages; i++) { %>
                        <li class="page-item <%= (i == currentPage) ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>">
                                <%= i %>
                            </a>
                        </li>
                        <% } %>
                </ul>
            </nav>
        </div>
    </div>
    <script>


        //Offer adding function 
        async function addOffer(productId) {

            const { value: amount } = await Swal.fire({
                title: 'Offer in percentage',
                input: 'number',
                inputLabel: 'percentage',
                inputPlaceholder: "%XX"
            });

            fetch('/admin/addProductOffer', {
                method: 'POST',
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    discountPercentage: amount,
                    productId: productId,
                })
            })
                .then(response => {

                    if (!response.ok) {
                        return response.json().then(err => {
                            throw new Error(err.error);
                        });
                    }
                    return response.json();
                })
                .then(data => {
                    Swal.fire({
                        icon: 'success',
                        title: 'Offer Added',
                        text: data.message,
                        timer: 2500,
                    }).then(() => {
                        location.reload();

                    });
                })
                .catch(error => {

                    Swal.fire({
                        icon: 'error',
                        title: 'Oops',
                        text: error.message
                    });
                });


        }


        // Offer removing funtion
        async function removeOffer(productId) {
            try {
                Swal.fire({
                    title: 'Remove Offer',
                    text: 'Are you sure you want to remove this offer?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes,remove!',
                    timer: 5000,
                    timerProgressBar: true,

                }).then(async (result) => {
                    if (result.isConfirmed) {


                        fetch('/admin/removeProductOffer', {
                            method: 'POST',
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ productId })
                        })
                            .then(response => {
                                if (!response.ok) {
                                    return response.json().then(err => {
                                        throw new Error(err.error);
                                    });
                                }
                                return response.json();

                            }).then(data => {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Offer Removed',
                                    text: data.message,
                                    timer: 2500,
                                }).then(() => {
                                    location.reload();

                                });
                            })
                            .catch(error => {

                                Swal.fire({
                                    icon: 'error',
                                    title: 'Oops',
                                    text: error.message
                                });
                            });



                    }
                })

            } catch (error) {
               console.log("error occures while removing offer:--",error);
            }
        }




    </script>
    <%- include("../../views/partials/admin/footer") %>