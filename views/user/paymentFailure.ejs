<%- include("../../views/partials/user/header.ejs") %>

<style>
    .order-status-container {
        padding: 20px 10px;
    }

    .text-red {
        color: #f44336;
    }

    .continue-btn {
        background-color: #5c4dbd;
        border-color: #5c4dbd;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        margin-right: 10px;
        transition: all 0.3s ease;
    }

    .continue-btn:hover {
        background-color: #4a3da9;
        border-color: #4a3da9;
    }

    .try-again-btn {
        background-color: white;
        border-color: #5c4dbd;
        color: #5c4dbd;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .try-again-btn:hover {
        background-color: #f0f0ff;
    }

    .payment-failed-image {
        height: auto;
        max-height: 400px;
        width: 100%;
    }

    .failed-message {
        margin-top: 20px;
    }

    @media (min-width: 768px) {
        .order-status-container {
            margin-left: 200px;
        }
    }

    @media (max-width: 767px) {
        .order-status-container {
            margin-left: 0;
            text-align: center;
        }

        .action-buttons a {
            display: block;
            width: 100%;
            margin: 10px 0;
        }
    }
</style>

<div class="container mt-5">
    <div class="row g-0 align-items-center justify-content-center"> 
        <!-- LEFT CONTENT -->
        <div class="col-md-6 p-3"> 
            <div class="order-status-container px-3">
                <div class="failed-message">
                    <h2 class="text-red">Payment Failed!</h2>

                    <!-- Show image just below the title only on small screens -->
                    <div class="d-block d-md-none my-4">
                        <img src="/images/payment-failed-animate.gif" alt="Payment Failed Illustration" class="img-fluid payment-failed-image">
                    </div>

                    <p class="mt-3">Your payment couldn't be processed at this time.</p>
                    <p>Please check your payment details and try again.</p>
                    
                    <div class="action-buttons mt-4 d-flex flex-wrap justify-content-center justify-content-md-start">
                        <a href="/checkout" class="btn btn-primary continue-btn me-2 mb-2">Try Again</a>
                        <a href="/shop" class="btn btn-outline-primary try-again-btn mb-2">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Image for large screens -->
        <div class="col-md-6 p-3 d-none d-md-flex justify-content-center align-items-center"> 
            <img src="/images/payment-failed-animate.gif" alt="Payment Failed Illustration" class="img-fluid payment-failed-image">
        </div>
    </div>
</div>

<%- include("../../views/partials/user/footer.ejs") %>
