<%- include("../../views/partials/user/header.ejs") %>

<style>
    .order-status-container {
        padding: 20px 10px;
        margin-left: 200px;
    }

    .text-red {
        color: #f44336;
    }

    .continue-btn {
        background-color: #5c4dbd;
        border-color: #5c4dbd;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        margin-right: 10px;
        transition: all 0.3s ease;
    }

    .continue-btn:hover {
        background-color: #4a3da9;
        border-color: #4a3da9;
    }

    .try-again-btn {
        background-color: white;
        border-color: #5c4dbd;
        color: #5c4dbd;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .try-again-btn:hover {
        background-color: #f0f0ff;
    }

    .payment-failed-image {
        height: 400px;
        margin-left: -200px;
    }

    .failed-message {
        margin-top: 20px;
    }
</style>

<div class="container mt-5">
    <div class="row g-0"> 
        <div class="col-md-6 p-0"> 
            <div class="order-status-container px-3">
                
                <div class="failed-message">
                    <h2 class="text-red">Payment Failed!</h2>
                    <p class="mt-3">Your payment couldn't be processed at this time.</p>
                    <p>Please check your payment details and try again.</p>
                    
                    <div class="action-buttons mt-4">
                        <a href="/checkout" class="btn btn-primary continue-btn">Try Again</a>
                        <a href="/shop" class="btn btn-outline-primary try-again-btn">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 p-0 d-flex justify-content-center align-items-center"> 
            <img src="/images/payment-failed-animate.gif" alt="Payment Failed Illustration" class="img-fluid payment-failed-image">
        </div>
    </div>
</div>

<%- include("../../views/partials/user/footer.ejs") %>