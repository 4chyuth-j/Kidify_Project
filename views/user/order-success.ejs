<%- include("../../views/partials/user/header.ejs") %>

<style>
    .order-status-container {
        padding: 20px 10px;
    }

    .text-pink {
        color: #ff80ab;
    }

    .continue-btn {
        background-color: #5c4dbd;
        border-color: #5c4dbd;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        margin-right: 10px;
        transition: all 0.3s ease;
    }

    .continue-btn:hover {
        background-color: #4a3da9;
        border-color: #4a3da9;
    }

    .view-btn {
        background-color: white;
        border-color: #5c4dbd;
        color: #5c4dbd;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .view-btn:hover {
        background-color: #f0f0ff;
    }

    .order-success-image {
        height: auto;
        max-height: 400px;
        width: 100%;
    }

    .success-message {
        margin-top: 20px;
    }

    @media (min-width: 768px) {
        .order-status-container {
            margin-left: 200px;
        }
    }

    @media (max-width: 767px) {
        .order-status-container {
            margin-left: 0;
            text-align: center;
        }

        .action-buttons a {
            display: block;
            width: 100%;
            margin: 10px 0;
        }
    }
</style>

<div class="container mt-5">
    <div class="row g-0 align-items-center justify-content-center"> 
        <!-- LEFT COLUMN -->
        <div class="col-md-6 p-3"> 
            <div class="order-status-container px-3">
                <b><h2 class="mb-4">Order Status</h2></b>
                <div class="success-message">
                    <h2 class="text-pink">Congratulations..!</h2>
                    <p class="mt-3">Your order is placed ;)</p>

                    <!-- Image only visible on small screens -->
                    <div class="d-block d-md-none my-4">
                        <img src="/images/happy-baby-animate.svg" alt="Order Success Illustration" class="img-fluid order-success-image">
                    </div>

                    <% if (order && order.expectedDeliveryDate) { %>
                        <p>Your order is expected to arrive on <%= new Date(order.expectedDeliveryDate).toLocaleDateString('en-US', {day: 'numeric', month: 'long', year: 'numeric'}) %></p>
                        
                        <div class="action-buttons mt-4 d-flex flex-wrap justify-content-center justify-content-md-start">
                            <a href="/shop" class="btn btn-primary continue-btn me-2 mb-2">Continue Shopping</a>
                            <a href="/orders" class="btn btn-outline-primary view-btn mb-2">View orders</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- RIGHT COLUMN IMAGE (only visible on md and up) -->
        <div class="col-md-6 p-3 d-none d-md-flex justify-content-center align-items-center"> 
            <img src="/images/happy-baby-animate.svg" alt="Order Success Illustration" class="img-fluid order-success-image">
        </div>
    </div>
</div>

<%- include("../../views/partials/user/footer.ejs") %>
