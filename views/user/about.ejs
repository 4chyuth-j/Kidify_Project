<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
    .about-section {
        padding: 80px 0;
    }

    .about-hero {
        background-color: #f8f9fa;
        padding: 120px 0;
        margin-bottom: 60px;
        position: relative;
        overflow: hidden;
        text-align: center;
    }

    .about-hero h1 {
        font-size: 3rem;
        margin-bottom: 20px;
        color: #333;
        position: relative;
        z-index: 2;
    }

    .about-hero p {
        font-size: 1.2rem;
        color: #666;
        max-width: 700px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }

    .about-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        padding: 30px;
        margin-bottom: 30px;
        transition: transform 0.3s ease;
    }

    .about-card:hover {
        transform: translateY(-5px);
    }

    .about-card h3 {
        font-size: 1.5rem;
        margin-bottom: 15px;
        color: #ff6b6b;
    }

    .about-image {
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .about-image img {
        width: 100%;
        height: auto;
        transition: transform 0.5s ease;
    }

    .about-image:hover img {
        transform: scale(1.03);
    }

    .team-member {
        text-align: center;
        margin-bottom: 30px;
    }

    .team-member img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 15px;
        border: 5px solid #fff;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .team-member h4 {
        font-size: 1.2rem;
        margin-bottom: 5px;
    }

    .team-member p {
        color: #ff6b6b;
        margin-bottom: 10px;
    }

    .social-icons a {
        display: inline-block;
        margin: 0 5px;
        color: #666;
        transition: color 0.3s ease;
    }

    .social-icons a:hover {
        color: #ff6b6b;
    }

    .values-list {
        list-style: none;
        padding: 0;
    }

    .values-list li {
        padding: 10px 0;
        border-bottom: 1px dashed #eee;
        display: flex;
        align-items: center;
    }

    .values-list li i {
        color: #ff6b6b;
        margin-right: 10px;
        font-size: 18px;
    }

    @media (max-width: 768px) {
        .about-hero {
            padding: 80px 0;
        }
        
        .about-hero h1 {
            font-size: 2.2rem;
        }
        
        .order-md-1 {
            order: 2;
        }
        
        .order-md-2 {
            order: 1;
            margin-bottom: 30px;
        }
    }
</style>

