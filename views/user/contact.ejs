<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
    .contact-section {
        padding: 80px 0;
    }

    .contact-hero {
        background-color: #f8f9fa;
        padding: 100px 0;
        margin-bottom: 60px;
        position: relative;
        overflow: hidden;
        text-align: center;
    }

    .contact-hero h1 {
        font-size: 3rem;
        margin-bottom: 20px;
        color: #333;
        position: relative;
        z-index: 2;
    }

    .contact-hero p {
        font-size: 1.2rem;
        color: #666;
        max-width: 700px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }

    .contact-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        padding: 30px;
        margin-bottom: 30px;
        transition: transform 0.3s ease;
        height: 100%;
    }

    .contact-card:hover {
        transform: translateY(-5px);
    }

    .contact-card h3 {
        font-size: 1.5rem;
        margin-bottom: 15px;
        color: #ff6b6b;
    }

    .contact-info {
        margin-bottom: 20px;
    }

    .contact-info i {
        font-size: 24px;
        color: #ff6b6b;
        margin-right: 15px;
        width: 30px;
        text-align: center;
    }

    .contact-map {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        height: 400px;
    }

    .form-control {
        border-radius: 5px;
        padding: 12px 15px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        transition: border-color 0.3s;
    }

    .form-control:focus {
        border-color: #ff6b6b;
        box-shadow: none;
    }

    .btn-send {
        background-color: #ff6b6b;
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s, transform 0.3s;
    }

    .btn-send:hover {
        background-color: #ff4c4c;
        transform: translateY(-2px);
    }

    .social-icons {
        margin-top: 20px;
    }

    .social-icons a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background-color: #f8f9fa;
        border-radius: 50%;
        margin-right: 10px;
        color: #333;
        transition: all 0.3s ease;
    }

    .social-icons a:hover {
        background-color: #ff6b6b;
        color: white;
        transform: translateY(-3px);
    }

    .faq-item {
        margin-bottom: 15px;
    }

    .faq-item h5 {
        color: #333;
        font-size: 18px;
        margin-bottom: 10px;
    }

    .faq-item p {
        color: #666;
    }

    @media (max-width: 768px) {
        .contact-hero {
            padding: 80px 0;
        }
        
        .contact-hero h1 {
            font-size: 2.2rem;
        }
        
        .contact-info i {
            font-size: 20px;
            margin-right: 10px;
        }
    }
</style>

