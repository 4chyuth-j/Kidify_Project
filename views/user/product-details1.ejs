<%- include("../../views/partials/user/header") %>
<style>
    :root {
        --primary-color: #ff69b4;
        --secondary-color: #f8c8dc;
        --background-color: #ffe4e1;
        --text-color: #333;
        --accent-color: #d14792;
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: var(--background-color);
    }

    .breadcrumb {
        background-color: var(--secondary-color);
        padding: 15px;
        font-size: 14px;
        color: var(--text-color);
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .breadcrumb a {
        color: var(--accent-color);
        text-decoration: none;
    }

    .breadcrumb span {
        color: #888;
    }

    .product-section {
        padding: 50px 0;
    }

    .product-gallery {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .main-image {
        width: 100%;
        height: 450px;
        object-fit: contain;
        border-radius: 10px;
        transition: transform 0.3s ease;
    }

    .main-image:hover {
        transform: scale(1.05);
    }

    .thumbnail-container {
        display: flex;
        justify-content: center;
        margin-top: 10px;
    }

    .thumbnail-container img {
        width: 80px;
        height: 80px;
        object-fit: contain;
        border-radius: 5px;
        cursor: pointer;
        margin: 0 5px;
        border: 2px solid transparent;
        transition: border-color 0.3s ease;
    }

    .thumbnail-container img:hover {
        border-color: var(--primary-color);
    }

    .product-info {
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        position: relative;
    }

    .product-title {
        color: var(--accent-color);
        font-size: 24px;
        margin-bottom: 10px;
    }

    .product-meta {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 10px;
    }

    .product-meta p {
        margin: 0;
    }

    .rating {
        font-size: 16px;
        color: gold;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .product-price ins {
        color: var(--accent-color);
        font-size: 24px;
        font-weight: bold;
        text-decoration: none; /* Remove underline from price */
    }

    .old-price {
        text-decoration: line-through;
        color: #888;
        margin-left: 10px;
    }

    .stock-status {
        color: green;
        font-weight: bold;
    }

    .quantity-selector {
        display: flex;
        align-items: center;
        margin-top: 15px;
    }

    .quantity-selector select {
        padding: 5px;
        font-size: 16px;
        margin-left: 10px;
    }

    .button-add-to-cart {
        background-color: var(--primary-color);
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .button-add-to-cart:hover {
        background-color: var(--accent-color);
    }

    .warranty-section {
        background-color: var(--secondary-color);
        padding: 15px;
        border-radius: 10px;
        text-align: center;
        margin-top: 20px;
        font-weight: bold;
        display: flex;
        justify-content: space-around;
        align-items: center;
    }

    .coupon-section {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: var(--secondary-color);
        padding: 10px;
        border-radius: 10px;
        margin-top: 20px;
        font-weight: bold;
    }

    .coupon-dropdown select {
        padding: 10px;
        border-radius: 5px;
        border: 2px solid var(--accent-color);
        font-size: 16px;
        cursor: pointer;
        margin-left: auto;
    }
</style>
<main class="product-section">
    <div class="container">
        <div class="breadcrumb-wrap">
            <div class="breadcrumb">
                <a href="/">Home</a>
                <span>></span>
                <a href="/shop">Shop</a>
                <span>></span>
                <span>Product Details</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="product-gallery">
                    <img id="mainImage" class="main-image" src="/uploads/re-image/<%=product.productImage[0]%>" alt="Product Image">
                    <div class="thumbnail-container">
                        <% for(let i=0; i<product.productImage.length; i++) { %>
                            <img class="thumbnail" src="/uploads/re-image/<%=product.productImage[i]%>" alt="Thumbnail" onclick="changeImage('<%=product.productImage[i]%>')">
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="product-info">
                    <h2 class="product-title"><%=product.productName%></h2>
                    <div class="product-meta">
                        <p>Brand: <%=product.brand%></p>
                        <div class="rating"><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-half"></i> (4.5/5)</div>
                    </div>
                    <div class="product-price">
                        <% if (productOffer && productOffer != 0) { %>
                            <ins><%=product.basePrice%>/-</ins>
                            <span class="old-price"><%=product.basePrice%></span>
                            <span style="color: #ff0000; margin-left: 10px;"><%= productOffer %>% off</span>
                        <% } else { %>
                            <ins><%=product.basePrice%>/-</ins>
                            <span>No Current Offer</span>
                        <% } %>
                    </div>
                    <p>Availability: <span class="stock-status"><%=stock%></span></p>
                    <p><%=product.description%></p>
                    <div class="quantity-selector">
                        <label for="quantity">Quantity:</label>
                        <select id="quantity">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                    <button class="button-add-to-cart">Add to Cart</button>
                    <div class="warranty-section">
                        <i class="bi bi-shield-check"></i> 1 Year Brand Warranty
                        <i class="bi bi-arrow-repeat"></i> 30 Day Return Policy
                        <i class="bi bi-cash"></i> Cash on Delivery Available
                    </div>
                    <div class="coupon-section">
                        <label for="coupons">Apply Discounts or Coupons:</label>
                        <select id="coupons">
                            <option value="none">Select a Coupon</option>
                            <option value="10off">10% Off</option>
                            <option value="freeShip">Free Shipping</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script>
    function changeImage(imageSrc) {
        const mainImage = document.getElementById('mainImage');
        mainImage.src = '/uploads/re-image/' + imageSrc;
    }
</script>
<%- include("../../views/partials/user/footer") %>